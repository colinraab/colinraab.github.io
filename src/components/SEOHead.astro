export interface Props {
  title: string;
  description: string;
  type?: 'website' | 'article' | 'profile';
  image?: string;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
}

const { 
  title, 
  description, 
  type = 'website',
  image,
  article 
} = Astro.props;

// Get the base URL for proper asset paths
const baseUrl = import.meta.env.BASE_URL;
const createAssetPath = (path: string) => {
  return baseUrl.endsWith('/') ? `${baseUrl}${path}` : `${baseUrl}/${path}`;
};

const defaultImage = new URL(createAssetPath('logo.svg'), Astro.url);
const ogImage = image ? new URL(image, Astro.url) : defaultImage;
