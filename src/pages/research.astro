<!--
  research.astro
  
  Academic research page showcasing music technology and AI research projects.
  Features thesis work, publications, and academic achievements.
  Highlights research in artificial intelligence and music technology at McGill University.
-->

---
import PageLayout from '../layouts/PageLayout.astro';

// Research projects data structure
const researchProjects = [
  {
    id: 'thesis',
    title: 'Music Technology Thesis',
    institution: 'McGill University',
    year: '2025',
    category: 'Artificial Intelligence',
    description: 'Applying multi-modal large language models to music analysis, exploring the intersection of AI and creative expression. Gemini and Qwen models are used for music information retrieval tasks and compared with state-of-the-art techniques.',
    tags: ['Large Language Models', 'Music Information Retrieval'],
    status: 'In Progress',
    link: null // Add link when available
  },
  {
    id: 'capstone',
    title: 'Capstone Project',
    institution: 'University of Miami',
    year: '2023',
    category: 'Plugin Development',
    description: 'Polyphonic Wavetable Synthesizer with per-voie, per-source processing. See the Programming page for more.',
    tags: ['JUCE', 'VST', 'Synthesizer Design'],
    status: 'Completed',
    link: null // Add link when available
  },
  {
    id: 'waveverb',
    title: 'WaveVerb',
    institution: 'McGill University',
    year: '2024',
    category: 'Acoustic Modelling',
    description: 'Feedback delay network reverb plugin with karplus-strong string synthesis. The delay lines feed into each other to create a complex and tonal reverb effect.',
    tags: ['Acoustics', 'JUCE', 'Plugin Development'],
    status: 'Completed',
    link: 'https://colinraab.com/waveverb/'
  },
  {
    id: 'firefader',
    title: 'FireFader',
    institution: 'McGill University',
    year: '2024',
    category: 'HCI',
    description: 'Force-feedback musical interface using motorized faders. Project started previously, worked to improve firmware, rebuild hardware, and design physically-inspired interaction in Max/MSP',
    tags: ['HCI', 'Musical Interfaces', 'Max/MSP'],
    status: 'Completed',
    link: null // Add link when available
  },
  {
    id: 'tcn',
    title: 'Temporal Convolutional Network Training',
    institution: 'McGill University',
    year: '2024',
    category: 'Machine Learning',
    description: 'Design and training of TCN networks for real-time audio style transfer. Trained multiple models which can be used in any DAW using Morpho by Neutone.',
    tags: ['Machine Learning', 'Audio Classification'],
    status: 'Completed',
    link: null // Add link when available
  },
  {
    id: 'infant',
    title: 'Audio and Video Analysis',
    institution: 'University of Miami',
    year: '2023-2025',
    category: 'Feature Extraction',
    description: 'Extraction of audio and video features for analysis of infant-directed singing. Research conducted with Dr. Shannon de l’Etoile, Dr. Soyoen Ahn, and Cameron Riopelle. Presented at the 2025 International Conference of Music Perception and Cognition (ICMPC)',
    tags: ['Machine Learning', 'Audio Classification'],
    status: 'Ongoing',
    link: null // Add link when available
  }
];
---

<PageLayout title="Research - Colin Raab" description="Explore Colin's academic research and projects in music technology, audio engineering, and creative computing.">
  <section class="section">
    <div class="container">
      <div class="page-hero">
        <h1>Research</h1>
        <p class="lead">
          Academic research in music technology
        </p>
      </div>
      
      <div class="research-grid">
        {researchProjects.map((project) => (
          <div class="research-card" data-category={project.category.toLowerCase().replace(/\s+/g, '-')}>
            <div class="card-header">
              <div class="category-badge" data-category={project.category.toLowerCase().replace(/\s+/g, '-')}>
                {project.category}
              </div>
              <div class="status-badge" data-status={project.status.toLowerCase().replace(/\s+/g, '-')}>
                {project.status}
              </div>
            </div>
            
            <div class="card-content">
              <h3 class="project-title">{project.title}</h3>
              
              <div class="project-meta">
                <span class="institution">{project.institution}</span>
                <span class="year">{project.year}</span>
              </div>
              
              <p class="project-description">{project.description}</p>
              
              <div class="tags-container">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
            
            {project.link && (
              <div class="card-footer">
                <a href={project.link} class="project-link" target="_blank" rel="noopener noreferrer">
                  View Project →
                </a>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
</PageLayout>

<style lang="scss">
  @use '../styles/helpers/responsive' as *;
  @use '../styles/helpers/colors' as *;
  @use '../styles/helpers/fonts' as *;
  @use '../styles/helpers/grid' as *;

  .page-hero {
    text-align: center;
    margin-bottom: 3rem;
    
    h1 {
      @include font-size('5xl');
      margin-bottom: 1rem;
      
      @include media-down('sm') {
        @include font-size('4xl');
      }
    }
    
    .lead {
      @include font-size('xl');
      @include text-color('text-secondary');
      max-width: 800px;
      margin: 0 auto;
      line-height: 1.6;
    }
  }

  // Research Grid Styles
  .research-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    
    @include media-down('sm') {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 3rem;
    }
  }

  .research-card {
    @include bg-color('bg-secondary');
    border: 1px solid var(--color-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    
    &:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
      border-color: var(--color-primary);
    }
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 1.5rem 0 1.5rem;
    gap: 1rem;
  }

  .category-badge {
    @include font-size('xs');
    @include font-weight('semibold');
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    
    // Category-specific colors
    &[data-category="artificial-intelligence"] {
      background: rgba(147, 51, 234, 0.15);
      color: #a855f7;
      border: 1px solid rgba(147, 51, 234, 0.3);
    }
    
    &[data-category="plugin-development"] {
      background: rgba(34, 197, 94, 0.15);
      color: #22c55e;
      border: 1px solid rgba(34, 197, 94, 0.3);
    }
    
    &[data-category="acoustic-modelling"] {
      background: rgba(249, 115, 22, 0.15);
      color: #f97316;
      border: 1px solid rgba(249, 115, 22, 0.3);
    }
    
    &[data-category="hci"] {
      background: rgba(236, 72, 153, 0.15);
      color: #ec4899;
      border: 1px solid rgba(236, 72, 153, 0.3);
    }
    
    &[data-category="machine-learning"] {
      background: rgba(14, 165, 233, 0.15);
      color: #0ea5e9;
      border: 1px solid rgba(14, 165, 233, 0.3);
    }

    &[data-category="feature-extraction"] {
      background: rgba(156, 233, 14, 0.15);
      color: #a0e90e;
      border: 1px solid rgba(134, 233, 14, 0.3);
    }
  }

  .status-badge {
    @include font-size('xs');
    @include font-weight('medium');
    padding: 0.25rem 0.625rem;
    border-radius: 15px;
    
    &[data-status="completed"] {
      background: rgba(34, 197, 94, 0.1);
      color: #22c55e;
      border: 1px solid rgba(34, 197, 94, 0.2);
    }
    
    &[data-status="in-progress"] {
      background: rgba(249, 115, 22, 0.1);
      color: #f97316;
      border: 1px solid rgba(249, 115, 22, 0.2);
    }
    
    &[data-status="ongoing"] {
      background: rgba(59, 130, 246, 0.1);
      color: #3b82f6;
      border: 1px solid rgba(59, 130, 246, 0.2);
    }
  }

  .card-content {
    padding: 1rem 1.5rem 1.5rem 1.5rem;
  }

  .project-title {
    @include font-size('xl');
    @include font-weight('bold');
    @include text-color('text-primary');
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .project-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    gap: 1rem;
    
    @include media-down('sm') {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .institution {
      @include font-size('sm');
      @include font-weight('medium');
      @include text-color('text-secondary');
      flex: 1;
    }
    
    .year {
      @include font-size('sm');
      @include font-weight('medium');
      @include text-color('text-muted');
      font-family: var(--font-family-mono);
    }
  }

  .project-description {
    @include font-size('sm');
    @include text-color('text-secondary');
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    
    .tag {
      @include font-size('xs');
      @include font-weight('medium');
      padding: 0.25rem 0.625rem;
      @include bg-color('bg-tertiary');
      @include text-color('text-muted');
      border-radius: 12px;
      border: 1px solid var(--color-border);
    }
  }

  .card-footer {
    padding: 0 1.5rem 1.5rem 1.5rem;
    
    .project-link {
      @include font-size('sm');
      @include font-weight('semibold');
      color: var(--color-primary);
      text-decoration: none;
      transition: color 0.2s ease;
      
      &:hover {
        color: var(--color-primary-light);
        text-decoration: underline;
      }
    }
  }
</style>

