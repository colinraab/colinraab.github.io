<style lang="scss">
  @use '../styles/helpers/responsive' as *;
  @use '../styles/helpers/colors' as *;
  @use '../styles/helpers/fonts' as *;
  @use '../styles/helpers/grid' as *;

  .page-hero {
    text-align: center;
    margin-bottom: 4rem;
    
    h1 {
      @include font-size('5xl');
      margin-bottom: 1rem;
      
      @include media-down('sm') {
        @include font-size('4xl');
      }
    }
    
    .lead {
      @include font-size('xl');
      @include text-color('text-secondary');
      max-width: 600px;
      margin: 0 auto;
    }
  }

  .music-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .music-card {
    @include bg-color('bg-secondary');
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    
    &:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
  }

  .music-artwork {
    height: 200px;
    position: relative;
    overflow: hidden;
    
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .placeholder-artwork {
      width: 100%;
      height: 100%;
      @include bg-color('border-light');
      @include flex-center;
      @include font-size('4xl');
    }
  }

  .music-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
    
    h3 {
      @include font-size('xl');
      @include font-weight('semibold');
      margin-bottom: 0.25rem;
    }
    
    .music-genre {
      @include font-size('sm');
      @include text-color('primary');
      @include font-weight('medium');
      margin-bottom: 1rem;
    }
    
    p {
      @include text-color('text-secondary');
      margin-bottom: 1.5rem;
      @include line-height('relaxed');
    }
  }

  .music-player {
    margin-bottom: 1.5rem;
    
    audio {
      width: 100%;
      height: 40px;
      border-radius: 4px;
      
      &::-webkit-media-controls-panel {
        background-color: var(--color-bg-secondary);
      }
    }
    
    .placeholder-player {
      height: 60px;
      @include bg-color('border-light');
      @include flex-center;
      @include font-weight('medium');
      @include text-color('text-muted');
      border-radius: 4px;
      border: 1px solid var(--color-border);
    }
    
    .video-container {
      position: relative;
      width: 100%;
      padding-bottom: 56.25%; /* 16:9 aspect ratio */
      height: 0;
      overflow: hidden;
      border-radius: 8px;
      
      iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 8px;
      }
    }
  }

  .music-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    @include font-size('sm');
    @include font-weight('medium');
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    
    &--primary {
      @include bg-color('primary');
      color: white;
      
      &:hover {
        background-color: var(--color-secondary);
        color: white;
      }
    }
    
    &--secondary {
      border-color: var(--color-primary);
      @include text-color('primary');
      
      &:hover {
        @include bg-color('primary');
        color: white;
      }
    }
  }
</style>
